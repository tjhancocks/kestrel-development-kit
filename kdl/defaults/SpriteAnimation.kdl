` SpriteAnimation
`
` The SpriteAnimation type is used by the Kestrel Engine to determine the
` animation and geometry information of an image asset.
@define {
	name = "SpriteAnimation";
	code = "sp√Øn";

	` The Sprites field is used to determine which image resource should
	` be used for the animated sprite.
	field("sprites") {
		required;
		value(name = "id", type = resource_reference, offset = 0);
	};

	` The Masks field is used to determine which image resource should be
	` used as a transparancy mask for the animated sprite.
	field("masks") {
		deprecated("The Masks field of the SpriteAnimation is unused by Kestrel.");
		value(name = "id", type = resource_reference, offset = 2, default = none) {
			none = #-1;
		};
	};

	` The size field is used to determine the size of each frame of 
	` animation.
	field("size") {
		required;
		value(name = "width", type = integer, size = word, offset = 4);
		value(name = "height", type = integer, size = word, offset = 6);
	};

	` The tiles field is used to determine the arrangment of sprite frames within
	` the source image.
	field("size") {
		required;
		value(name = "x", type = integer, size = word, offset = 8);
		value(name = "y", type = integer, size = word, offset = 10);
	};

}
